<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/half_margin"
    android:paddingLeft="@dimen/half_margin"
    android:paddingRight="@dimen/half_margin"
    android:paddingTop="@dimen/half_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    tools:context="com.mins01.app001.SdgnDetailActivity"
    android:background="@drawable/layout_rounded_gray"

    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="작성자"
            android:id="@+id/textView_bc_name"
            android:layout_marginRight="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="★☆☆☆☆"
            android:id="@+id/textView_bc_number"
            android:layout_marginRight="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="YY.mm.dd HH:ii"
            android:id="@+id/textView_bc_insert_date"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
             />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:id="@+id/textView_bc_comment"
        android:textColor="@color/colorPrimaryDark"
        />

</LinearLayout>