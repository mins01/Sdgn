<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/half_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/box_skill_0"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="스킬"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/half_margin"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:contentDescription="스킬1"
                        android:id="@+id/imageView_skill1_img" />

                    <TextView
                        android:id="@+id/imageView_skill1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스킬1"
                        android:gravity="left"
                        android:layout_toRightOf="@+id/imageView_skill1_img" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:contentDescription="스킬2"
                        android:id="@+id/imageView_skill2_img" />

                    <TextView
                        android:id="@+id/imageView_skill2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스킬2"
                        android:gravity="left"
                        android:layout_toRightOf="@+id/imageView_skill2_img" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/box_skill_1"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="스킬 (변신 후)"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/half_margin"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:contentDescription="스킬4"
                        android:id="@+id/imageView_skill4_img" />

                    <TextView
                        android:id="@+id/imageView_skill4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스킬4"
                        android:gravity="left"
                        android:layout_toRightOf="@+id/imageView_skill4_img" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:contentDescription="스킬5"
                        android:id="@+id/imageView_skill5_img" />

                    <TextView
                        android:id="@+id/imageView_skill5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스킬5"
                        android:gravity="left"
                        android:layout_toRightOf="@+id/imageView_skill5_img" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="필살기"
            android:textColor="#000"
            android:background="@drawable/layout_rounded_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/half_margin">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="스킬3"
                    android:id="@+id/imageView_skill3_img" />

                <TextView
                    android:id="@+id/imageView_skill3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스킬3"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/imageView_skill3_img" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="스킬6"
                    android:id="@+id/imageView_skill6_img" />

                <TextView
                    android:id="@+id/imageView_skill6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스킬6"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/imageView_skill6_img" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/box_weapon_0_0"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"

                android:text="무기"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/weapon_0_0">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/box_weapon_0_1"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"

                android:text="변신 후 무기"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/weapon_0_1">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/box_weapon_0_2"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"

                android:text="2차 변신 후  무기"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/weapon_0_2">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/box_weapon_1_0"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"

                android:text="추가 무기"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/weapon_1_0">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/box_weapon_1_1"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"

                android:text="변신후 추가 무기"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/weapon_1_1">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/box_box"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"

                android:text="입수방법"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/box_box_0">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>