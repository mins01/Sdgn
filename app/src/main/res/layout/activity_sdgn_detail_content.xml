<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:columnCount="1"
        android:rowCount="300">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:padding="5dp"

            android:text="스킬"
            android:textColor="#000"
            android:background="@drawable/layout_rounded_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/group_unit_skill_img"
            >
            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:contentDescription="스킬1"/>
            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:contentDescription="스킬2"/>
            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:contentDescription="스킬3"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/group_unit_skill"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="스킬1"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="스킬2"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="스킬3"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/group_unit_weapons_0"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"

                android:text="무기"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/group_unit_weapon_img"
                android:weightSum="3"
                >
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="114dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:contentDescription="무기1"/>
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="114dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:contentDescription="무기2"/>
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="114dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:contentDescription="무기3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/group_unit_weapon"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="무기1"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="무기2"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="무기3"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/group_unit_weapons_1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"

                android:text="무기 (변신 후)"
                android:textColor="#000"
                android:background="@drawable/layout_rounded_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/group_unit_weapon_img_1"
                android:weightSum="3"
                >
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="114dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:contentDescription="무기4"/>
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="114dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:contentDescription="무기5"/>
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="114dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:contentDescription="무기6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/group_unit_weapon_1"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="무기4"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="무기5"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="무기6"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </GridLayout>
</ScrollView>