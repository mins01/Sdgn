<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="172dp"
    android:layout_height="211dp"
    android:background="@drawable/layout_rounded_black"
    android:id="@+id/list_row_relativeLayout"
    android:padding="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <com.android.volley.toolbox.NetworkImageView
        android:layout_width="168dp"
        android:layout_height="207dp"
        android:id="@+id/list_row_imageView"
        android:background="@android:color/black"
        android:layout_margin="2dp"
        android:layout_gravity="start|center_vertical"
        android:contentDescription="@string/list_row_imageView"
        />
        <TextView
            android:id="@+id/txtview_unit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="--------유닛명--------"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@android:color/primary_text_dark"
            android:contentDescription="유닛명"
            android:background="@drawable/bg_unit_name"
            android:layout_margin="2dp"/>
    <TextView
        android:id="@+id/txtview_unit_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="유닛타입"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="@android:color/primary_text_dark"
        android:contentDescription="유닛타입"
        android:background="@drawable/bg_unit_type_1"
        android:layout_margin="2dp"
        />
    <TextView
        android:id="@+id/txtview_unit_rank"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:textStyle="bold|italic"
        android:text="Z"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="30dp"
        android:gravity="center_horizontal|center"
        android:textColor="@android:color/primary_text_dark"
        android:contentDescription="유닛랭크"
        android:background="@drawable/bg_unit_rank"
        android:layout_margin="2dp"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="@android:integer/config_shortAnimTime"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_avg_star"
        android:layout_below="@+id/txtview_unit_properties"
        android:layout_alignLeft="@+id/list_row_imageView"
        android:layout_alignStart="@+id/list_row_imageView">
        <ImageView
            android:id="@+id/imageview_avg_star_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/star_off"/>
        <ImageView
            android:id="@+id/imageview_avg_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/star_off"/>
        <ImageView
            android:id="@+id/imageview_avg_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/star_off"/>
        <ImageView
            android:id="@+id/imageview_avg_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/star_off"/>
        <ImageView
            android:id="@+id/imageview_avg_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/star_off"/>
    </LinearLayout>

</RelativeLayout>

